rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidSubscription() {
      return request.resource.data.subscription in ['free', 'pro'];
    }
    
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && isValidSubscription();
      allow update: if isOwner(userId) && isValidSubscription();
      allow delete: if isOwner(userId);
      
      match /journals/{journalId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && 
                       request.resource.data.keys().hasAll(['title', 'content', 'timestamp']) &&
                       request.resource.data.timestamp is timestamp;
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
    }
    
    match /chatUsage/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && 
                     request.resource.data.keys().hasAll(['count', 'date']) &&
                     request.resource.data.count is number &&
                     request.resource.data.count >= 0;
      allow update: if isOwner(userId) && 
                     request.resource.data.count is number &&
                     request.resource.data.count >= 0;
      allow delete: if isOwner(userId);
    }
    
    match /moodTracking/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    match /sleepTracking/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                     request.resource.data.userId == request.auth.uid &&
                     request.resource.data.keys().hasAll(['userId', 'doctorName', 'date', 'time', 'status']);
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
